<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ba05"
    tools:context="com.example.amdin.menuselector.LoginActivity">

    <TextView
        android:id="@+id/textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textPass"
        android:layout_alignStart="@+id/textPass"
        android:layout_marginBottom="26dp"
        android:text="ID"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/textPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:text="Password"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/textPassConfirm"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/textPass"
        android:layout_below="@+id/textPass"
        android:layout_marginTop="31dp"
        android:text="Password Confirm"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/editId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textId"
        android:layout_alignBottom="@+id/textId"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp" />


    <EditText
        android:id="@+id/editPass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editId"
        android:layout_alignTop="@+id/textPass"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editConfirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editPass"
        android:layout_alignTop="@+id/textPassConfirm"
        android:layout_marginTop="11dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPassConfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:onClick="onButtonSignUp"
        android:text="Sign Up" />


</RelativeLayout>
